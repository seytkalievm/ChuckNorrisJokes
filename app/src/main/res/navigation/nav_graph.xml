<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/categoriesFragment">

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.example.chucknorrisjokes.view.CategoriesFragment"
        android:label="categories_fragment"
        tools:layout="@layout/categories_fragment">
        <action
            android:id="@+id/actionMainFragmentToJokeFragment"
            app:destination="@id/jokeFragment"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@anim/slide_right" />
    </fragment>
    <fragment
        android:id="@+id/jokeFragment"
        android:name="com.example.chucknorrisjokes.view.JokeFragment"
        android:label="joke_fragment"
        tools:layout="@layout/joke_fragment">


        <argument
            android:name="selectedCategory"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.chucknorrisjokes.view.FavoritesFragment"
        android:label="favorites_fragment"
        tools:layout="@layout/favorites_fragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.chucknorrisjokes.view.SearchFragment"
        android:label="search_fragment"
        tools:layout="@layout/search_fragment" />


</navigation>